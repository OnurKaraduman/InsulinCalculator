<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFEBF9"
    android:orientation="vertical"
    android:paddingTop="@dimen/paddinLeft" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/txtAcilisLeft" >

        <TextView
            android:id="@+id/txtBilgi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font"
            android:text="@string/txtAksam"
            android:textColor="#000000"
            android:textSize="@dimen/txtSize"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/txtAcilisLeft" >

        <EditText
            android:id="@+id/edtKalori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edttxtshape"
            android:ems="10" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/txtAcilisLeft" >

        <Button
            android:id="@+id/btnTamamAksam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:text="@string/btnAksamTamam" />
    </LinearLayout>

</LinearLayout>